{
    "name": "ibexa/backend-assessment",
    "description": "Backend Technical Assessment - Ibexa Experience Project",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^8.2",
        "doctrine/doctrine-bundle": "^2.7",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/orm": "^2.13",
        "http-interop/http-factory-guzzle": "^1.2",
        "ibexa/oss": "4.5.7",
        "ibexa/post-install": "^4.5",
        "ibexa/solr": "4.5.7",
        "symfony/intl": "5.4.*",
        "symfony/runtime": "^5.4",
        "symfony/webpack-encore-bundle": "^1.17",
        "twig/extra-bundle": "^3.22"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0",
        "symfony/browser-kit": "5.4.*",
        "symfony/maker-bundle": "^1.50",
        "symfony/phpunit-bridge": "^6.0",
        "symplify/easy-coding-standard": "^12.0",
        "vimeo/psalm": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "setup": [
            "@php bin/console doctrine:database:create --if-not-exists",
            "@php bin/console doctrine:migrations:migrate --no-interaction",
            "@php bin/console ibexa:install",
            "@php bin/console app:bootstrap:setup",
            "@php bin/console cache:clear"
        ],
        "bootstrap": [
            "@setup"
        ],
        "test": [
            "@php bin/phpunit"
        ],
        "psalm": [
            "@php vendor/bin/psalm"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan analyse"
        ],
        "cs-check": [
            "@php vendor/bin/ecs check"
        ],
        "cs-fix": [
            "@php vendor/bin/ecs check --fix"
        ],
        "qa": [
            "@cs-check",
            "@psalm",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true,
            "php-http/discovery": true,
            "ibexa/post-install": true
        },
        "audit": {
            "abandoned": "report"
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "5.4.*"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
